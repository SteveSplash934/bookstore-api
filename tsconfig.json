{
  "compilerOptions": {
    "module": "ESNext", // Use ESNext module system
    "target": "ESNext", // Set target to ESNext to enable features like import.meta
    "moduleResolution": "node", // Enable Node.js style module resolution
    "esModuleInterop": true, // Enable interop between CommonJS and ES Modules
    "outDir": "./dist", // Set output directory
    "strict": true // Enable strict type checking
  },
  "include": [
    "src/**/*.ts", // Include all TypeScript files in the src folder
    "views/**/*.*"
  ]
}
