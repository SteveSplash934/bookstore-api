{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "dist", 
    "rootDir": "src", 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "strict": true, 
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "esnext", 
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}
